<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--
        ========================================================================
        MENU STRUCTURE - Cashflow Planner V2
        ========================================================================

        Pattern Used: patterns/views/menu-action.xml

        Menu Hierarchy:
        Accounting (Odoo Core)
        └── Cashflow Planning
            ├── Planning
            │   ├── Planned Items
            │   ├── Recurring Items
            │   └── Budgets
            ├── Reports
            │   ├── Cashflow Overview
            │   ├── Forecast Report
            │   └── Budget Analysis
            └── Configuration
                ├── Categories
                └── Alerts

        Note: Parent is account.menu_finance (Accounting top menu)
        Actions will be created in Phase 2 when models are ready.
        -->

        <!-- ================================================================ -->
        <!-- ROOT MENU (Under Accounting) -->
        <!-- ================================================================ -->

        <menuitem
            id="menu_eo_cfp_root"
            name="Cashflow Planning"
            parent="account.menu_finance"
            sequence="60"/>

        <!-- ================================================================ -->
        <!-- PLANNING SUBMENU -->
        <!-- ================================================================ -->

        <menuitem
            id="menu_eo_cfp_planning"
            name="Planning"
            parent="menu_eo_cfp_root"
            sequence="10"/>

        <!-- Planned Items (will be linked to action in Phase 2) -->
        <menuitem
            id="menu_eo_cfp_planned_items"
            name="Planned Items"
            parent="menu_eo_cfp_planning"
            sequence="10"/>
            <!-- action="action_eo_cfp_planned_item" -->

        <!-- Recurring Items (will be linked to action in Phase 2) -->
        <menuitem
            id="menu_eo_cfp_recurring_items"
            name="Recurring Items"
            parent="menu_eo_cfp_planning"
            sequence="20"
            />
            <!-- action="action_eo_cfp_recurring_item" -->

        <!-- Budgets (will be linked to action in Phase 2) -->
        <menuitem
            id="menu_eo_cfp_budgets"
            name="Budgets"
            parent="menu_eo_cfp_planning"
            sequence="30"
            />
            <!-- action="action_eo_cfp_budget" -->

        <!-- ================================================================ -->
        <!-- REPORTS SUBMENU -->
        <!-- ================================================================ -->

        <menuitem
            id="menu_eo_cfp_reports"
            name="Reports"
            parent="menu_eo_cfp_root"
            sequence="20"
            />

        <!-- Cashflow Overview (will be linked to wizard in Phase 4) -->
        <menuitem
            id="menu_eo_cfp_report_overview"
            name="Cashflow Overview"
            parent="menu_eo_cfp_reports"
            sequence="10"
            />
            <!-- action="action_eo_cfp_wizard_overview" -->

        <!-- Forecast Report (will be linked to wizard in Phase 4) -->
        <menuitem
            id="menu_eo_cfp_report_forecast"
            name="Forecast Report"
            parent="menu_eo_cfp_reports"
            sequence="20"
            />
            <!-- action="action_eo_cfp_wizard_forecast" -->

        <!-- Budget Analysis (will be linked to wizard in Phase 4) -->
        <menuitem
            id="menu_eo_cfp_report_budget"
            name="Budget Analysis"
            parent="menu_eo_cfp_reports"
            sequence="30"
            />
            <!-- action="action_eo_cfp_wizard_budget" -->

        <!-- ================================================================ -->
        <!-- CONFIGURATION SUBMENU -->
        <!-- ================================================================ -->

        <menuitem
            id="menu_eo_cfp_configuration"
            name="Configuration"
            parent="menu_eo_cfp_root"
            sequence="30"
            />

        <!-- Categories - action will be added from eo_cfp_category_view.xml -->
        <!-- This is just a placeholder, the real menu with action is in eo_cfp_category_view.xml -->

        <!-- Alerts (will be linked to action in Phase 2) -->
        <menuitem
            id="menu_eo_cfp_alerts"
            name="Alerts"
            parent="menu_eo_cfp_configuration"
            sequence="20"
            />
            <!-- action="action_eo_cfp_alert" -->

        <!--
        ========================================================================
        MENU SECURITY NOTES
        ========================================================================

        Menu Visibility by Role:
        - User (group_eo_cfp_user): Planning menu, Reports menu, basic items
        - Manager (group_eo_cfp_manager): + Recurring Items, Forecast, Configuration
        - Director (group_eo_cfp_director): + Budgets, Budget Analysis, Alerts

        Because of implied_ids in security groups:
        - Directors see everything (they have Manager and User groups)
        - Managers see User items + their own
        - Users see only basic items
        -->

    </data>
</openerp>

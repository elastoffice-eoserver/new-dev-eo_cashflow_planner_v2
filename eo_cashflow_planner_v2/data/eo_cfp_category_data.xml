<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <!--
        ========================================================================
        DEFAULT CATEGORY DATA
        ========================================================================

        Pattern Used: patterns/data/data-xml.xml

        Purpose: Pre-populate common cashflow categories
        Note: noupdate="1" means these won't be updated on module upgrade
              (allows users to customize them)
        -->

        <!-- ================================================================ -->
        <!-- INCOME CATEGORIES -->
        <!-- ================================================================ -->

        <!-- Parent: Sales & Revenue -->
        <record id="category_income_sales" model="eo.cfp.category">
            <field name="name">Sales &amp; Revenue</field>
            <field name="code">INCOME_SALES</field>
            <field name="type">income</field>
            <field name="sequence">10</field>
            <field name="description">Revenue from sales of products or services</field>
        </record>

        <!-- Child: Product Sales -->
        <record id="category_income_product_sales" model="eo.cfp.category">
            <field name="name">Product Sales</field>
            <field name="code">INCOME_PROD</field>
            <field name="type">income</field>
            <field name="sequence">10</field>
            <field name="parent_id" ref="category_income_sales"/>
        </record>

        <!-- Child: Service Revenue -->
        <record id="category_income_services" model="eo.cfp.category">
            <field name="name">Service Revenue</field>
            <field name="code">INCOME_SERV</field>
            <field name="type">income</field>
            <field name="sequence">20</field>
            <field name="parent_id" ref="category_income_sales"/>
        </record>

        <!-- Parent: Other Income -->
        <record id="category_income_other" model="eo.cfp.category">
            <field name="name">Other Income</field>
            <field name="code">INCOME_OTHER</field>
            <field name="type">income</field>
            <field name="sequence">20</field>
            <field name="description">Interest, dividends, and other non-operating income</field>
        </record>

        <!-- Child: Interest Income -->
        <record id="category_income_interest" model="eo.cfp.category">
            <field name="name">Interest Income</field>
            <field name="code">INCOME_INT</field>
            <field name="type">income</field>
            <field name="sequence">10</field>
            <field name="parent_id" ref="category_income_other"/>
        </record>

        <!-- ================================================================ -->
        <!-- PAYMENT CATEGORIES -->
        <!-- ================================================================ -->

        <!-- Parent: Operating Expenses -->
        <record id="category_payment_operating" model="eo.cfp.category">
            <field name="name">Operating Expenses</field>
            <field name="code">PAY_OPEX</field>
            <field name="type">payment</field>
            <field name="sequence">10</field>
            <field name="description">Regular business operating expenses</field>
        </record>

        <!-- Child: Salaries & Wages -->
        <record id="category_payment_salaries" model="eo.cfp.category">
            <field name="name">Salaries &amp; Wages</field>
            <field name="code">PAY_SAL</field>
            <field name="type">payment</field>
            <field name="sequence">10</field>
            <field name="parent_id" ref="category_payment_operating"/>
        </record>

        <!-- Child: Rent & Utilities -->
        <record id="category_payment_facilities" model="eo.cfp.category">
            <field name="name">Rent &amp; Facilities</field>
            <field name="code">PAY_RENT</field>
            <field name="type">payment</field>
            <field name="sequence">20</field>
            <field name="parent_id" ref="category_payment_operating"/>
        </record>

        <!-- Grandchild: Office Rent -->
        <record id="category_payment_office_rent" model="eo.cfp.category">
            <field name="name">Office Rent</field>
            <field name="code">PAY_RENT_OFF</field>
            <field name="type">payment</field>
            <field name="sequence">10</field>
            <field name="parent_id" ref="category_payment_facilities"/>
        </record>

        <!-- Grandchild: Utilities -->
        <record id="category_payment_utilities" model="eo.cfp.category">
            <field name="name">Utilities</field>
            <field name="code">PAY_UTIL</field>
            <field name="type">payment</field>
            <field name="sequence">20</field>
            <field name="parent_id" ref="category_payment_facilities"/>
        </record>

        <!-- Child: Marketing & Advertising -->
        <record id="category_payment_marketing" model="eo.cfp.category">
            <field name="name">Marketing &amp; Advertising</field>
            <field name="code">PAY_MKT</field>
            <field name="type">payment</field>
            <field name="sequence">30</field>
            <field name="parent_id" ref="category_payment_operating"/>
        </record>

        <!-- Child: Office Supplies -->
        <record id="category_payment_supplies" model="eo.cfp.category">
            <field name="name">Office Supplies</field>
            <field name="code">PAY_SUP</field>
            <field name="type">payment</field>
            <field name="sequence">40</field>
            <field name="parent_id" ref="category_payment_operating"/>
        </record>

        <!-- Parent: Cost of Goods Sold -->
        <record id="category_payment_cogs" model="eo.cfp.category">
            <field name="name">Cost of Goods Sold</field>
            <field name="code">PAY_COGS</field>
            <field name="type">payment</field>
            <field name="sequence">20</field>
            <field name="description">Direct costs of producing goods or services</field>
        </record>

        <!-- Child: Raw Materials -->
        <record id="category_payment_materials" model="eo.cfp.category">
            <field name="name">Raw Materials</field>
            <field name="code">PAY_MAT</field>
            <field name="type">payment</field>
            <field name="sequence">10</field>
            <field name="parent_id" ref="category_payment_cogs"/>
        </record>

        <!-- Parent: Taxes & Compliance -->
        <record id="category_payment_taxes" model="eo.cfp.category">
            <field name="name">Taxes &amp; Compliance</field>
            <field name="code">PAY_TAX</field>
            <field name="type">payment</field>
            <field name="sequence">30</field>
            <field name="description">Tax payments and regulatory compliance costs</field>
        </record>

        <!-- Child: Income Tax -->
        <record id="category_payment_income_tax" model="eo.cfp.category">
            <field name="name">Income Tax</field>
            <field name="code">PAY_TAX_INC</field>
            <field name="type">payment</field>
            <field name="sequence">10</field>
            <field name="parent_id" ref="category_payment_taxes"/>
        </record>

        <!-- Child: VAT/Sales Tax -->
        <record id="category_payment_vat" model="eo.cfp.category">
            <field name="name">VAT / Sales Tax</field>
            <field name="code">PAY_TAX_VAT</field>
            <field name="type">payment</field>
            <field name="sequence">20</field>
            <field name="parent_id" ref="category_payment_taxes"/>
        </record>

    </data>
</openerp>

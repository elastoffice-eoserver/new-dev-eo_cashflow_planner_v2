<?xml version="1.0" encoding="utf-8"?>
<!--
XLS Report Definitions for eoCashflow Planner V2
=================================================

Registers XLS export reports in Odoo.

Pattern: Similar to eo_cash_reports/report/report.xml
Uses: report_xls framework

Author: Claude Code
Date: 2025-10-21
-->
<openerp>
    <data>

        <!-- Cashflow Overview XLS Report -->
        <record id="eo_cfp_report_overview_xls" model="ir.actions.report.xml">
            <field name="report_type">xls</field>
            <field eval="[(6,0,[])]" name="groups_id"/>
            <field eval="0" name="multi"/>
            <field eval="0" name="auto"/>
            <field eval="1" name="header"/>
            <field name="model">eo.cfp.report.overview</field>
            <field name="name">Cashflow Overview</field>
            <field name="report_name">eo_cfp_report_overview_xls</field>
            <field name="report_filename">object.report_file_name + '.xls'</field>
        </record>

        <!-- Cashflow Forecast XLS Report -->
        <record id="eo_cfp_report_forecast_xls" model="ir.actions.report.xml">
            <field name="report_type">xls</field>
            <field eval="[(6,0,[])]" name="groups_id"/>
            <field eval="0" name="multi"/>
            <field eval="0" name="auto"/>
            <field eval="1" name="header"/>
            <field name="model">eo.cfp.report.forecast</field>
            <field name="name">Cashflow Forecast</field>
            <field name="report_name">eo_cfp_report_forecast_xls</field>
            <field name="report_filename">object.report_file_name + '.xls'</field>
        </record>

        <!-- Budget Analysis XLS Report -->
        <record id="eo_cfp_report_budget_xls" model="ir.actions.report.xml">
            <field name="report_type">xls</field>
            <field eval="[(6,0,[])]" name="groups_id"/>
            <field eval="0" name="multi"/>
            <field eval="0" name="auto"/>
            <field eval="1" name="header"/>
            <field name="model">eo.cfp.report.budget</field>
            <field name="name">Budget Analysis</field>
            <field name="report_name">eo_cfp_report_budget_xls</field>
            <field name="report_filename">object.report_file_name + '.xls'</field>
        </record>

        <!-- Cashflow Overview PDF Report -->
        <record id="eo_cfp_report_overview_pdf" model="ir.actions.report.xml">
            <field name="report_type">webkit</field>
            <field eval="[(6,0,[])]" name="groups_id"/>
            <field eval="0" name="multi"/>
            <field eval="0" name="auto"/>
            <field eval="1" name="header"/>
            <field name="model">eo.cfp.report.overview</field>
            <field name="name">Cashflow Overview</field>
            <field name="report_name">eo.cfp.report.overview.webkit</field>
            <field name="report_rml">eo_cashflow_planner_v2/report/eo_cfp_report_overview_pdf.mako</field>
            <field name="report_file">eo_cashflow_planner_v2/report/eo_cfp_report_overview_pdf.mako</field>
            <field name="report_filename">object.report_file_name + '.pdf'</field>
        </record>

    </data>
</openerp>

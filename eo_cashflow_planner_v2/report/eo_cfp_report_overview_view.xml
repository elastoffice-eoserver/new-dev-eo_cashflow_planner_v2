<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- ================================================================ -->
        <!-- CASHFLOW OVERVIEW REPORT - Form View -->
        <!-- ================================================================ -->

        <record id="eo_cfp_report_overview_form_view" model="ir.ui.view">
            <field name="name">eo.cfp.report.overview.form</field>
            <field name="model">eo.cfp.report.overview</field>
            <field name="arch" type="xml">
                <form string="Cashflow Overview" version="7.0" create="false">

                    <!-- Header / Filter Section -->
                    <group string="Date Range" col="4">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>

                    <group string="Filters" col="4">
                        <field name="type_filter"/>
                        <field name="state_filter"/>
                        <field name="category_id"/>
                        <field name="partner_ids" widget="many2many_tags"/>
                    </group>

                    <group string="Source Selection" col="4">
                        <field name="include_planned_items"/>
                        <field name="include_invoices"/>
                        <label string="" colspan="2"/>
                    </group>

                    <!-- Summary Section -->
                    <group string="Summary" col="6">
                        <field name="total_income" readonly="1"/>
                        <field name="total_payment" readonly="1"/>
                        <field name="net_cashflow" readonly="1"/>
                        <label string="" colspan="6"/>
                        <button name="display_items" type="object" string="Load Items" class="oe_highlight"/>
                        <button string="Export to XLS"
                                type="action"
                                name="%(eo_cfp_report_overview_xls)d"
                                icon="gtk-save-as"
                                context="{'xls_export': True}"/>
                        <button string="Export to PDF"
                                type="action"
                                name="%(eo_cfp_report_overview_pdf)d"
                                icon="gtk-print"/>
                    </group>

                    <!-- Results Section -->
                    <group>
                        <notebook>
                            <page string="Cashflow Items">
                                <button string="Details" name="detail" type="object"
                                        class="oe_link" icon="gtk-zoom-in"/>
                                <field name="line_ids" nolabel="1">
                                    <tree string="Cashflow Items" create="false"
                                          colors="blue:type=='income';red:type=='payment';gray:state=='cancelled'">
                                        <field name="source_type"/>
                                        <field name="document_number"/>
                                        <field name="planned_date"/>
                                        <field name="actual_date"/>
                                        <field name="type"/>
                                        <field name="name"/>
                                        <field name="category_id"/>
                                        <field name="partner_id"/>
                                        <field name="amount" sum="Total Amount"/>
                                        <field name="residual_amount"/>
                                        <field name="signed_amount" sum="Net Cashflow"/>
                                        <field name="currency_id" groups="base.group_multi_currency"/>
                                        <field name="priority"/>
                                        <field name="state"/>
                                        <button name="button_jump_to_document" type="object"
                                                string="Open" icon="gtk-jump-to"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </form>
            </field>
        </record>

        <!-- ================================================================ -->
        <!-- ACTION -->
        <!-- ================================================================ -->

        <record id="action_eo_cfp_report_overview" model="ir.actions.act_window">
            <field name="name">Cashflow Overview</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">eo.cfp.report.overview</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
            <field name="view_id" ref="eo_cfp_report_overview_form_view"/>
        </record>

        <!-- ================================================================ -->
        <!-- REPORT LINE - Detailed Tree View (for Detail button popup) -->
        <!-- ================================================================ -->

        <record id="eo_cfp_report_overview_line_tree_view_detailed" model="ir.ui.view">
            <field name="name">eo.cfp.report.overview.line.tree.detailed</field>
            <field name="model">eo.cfp.report.overview.line</field>
            <field name="arch" type="xml">
                <tree string="Cashflow Overview Details" create="false"
                      colors="blue:type=='income';red:type=='payment';gray:state=='cancelled'">
                    <field name="source_type"/>
                    <field name="document_number"/>
                    <field name="planned_date"/>
                    <field name="actual_date"/>
                    <field name="type"/>
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="partner_id"/>
                    <field name="amount" sum="Total Amount"/>
                    <field name="residual_amount" sum="Total Residual"/>
                    <field name="signed_amount" sum="Net Cashflow"/>
                    <field name="currency_id" groups="base.group_multi_currency"/>
                    <field name="priority"/>
                    <field name="state"/>
                    <button name="button_jump_to_document" type="object"
                            string="Open Document" icon="gtk-jump-to"/>
                </tree>
            </field>
        </record>

        <!-- ================================================================ -->
        <!-- REPORT LINE - Search View (for Detail popup filtering) -->
        <!-- ================================================================ -->

        <record id="eo_cfp_report_overview_line_search_view" model="ir.ui.view">
            <field name="name">eo.cfp.report.overview.line.search</field>
            <field name="model">eo.cfp.report.overview.line</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Cashflow Overview Details">
                    <field name="category_id"/>
                    <field name="partner_id"/>
                    <field name="planned_date"/>
                    <field name="document_number"/>
                    <field name="name"/>

                    <separator/>

                    <!-- Filters by Source Type -->
                    <filter string="Planned Items" name="filter_planned_items"
                            domain="[('source_type','=','planned_item')]"/>
                    <filter string="Invoices" name="filter_invoices"
                            domain="[('source_type','=','invoice')]"/>

                    <separator/>

                    <!-- Filters by Transaction Type -->
                    <filter string="Income" name="filter_income"
                            domain="[('type','=','income')]"/>
                    <filter string="Payment" name="filter_payment"
                            domain="[('type','=','payment')]"/>

                    <separator/>

                    <!-- Filters by State -->
                    <filter string="Planned" name="filter_planned"
                            domain="[('state','=','planned')]"/>
                    <filter string="Paid" name="filter_paid"
                            domain="[('state','=','paid')]"/>
                    <filter string="Cancelled" name="filter_cancelled"
                            domain="[('state','=','cancelled')]"/>

                    <separator/>

                    <!-- Filters by Priority -->
                    <filter string="Low Priority" name="filter_low"
                            domain="[('priority','=','low')]"/>
                    <filter string="Medium Priority" name="filter_medium"
                            domain="[('priority','=','medium')]"/>
                    <filter string="High Priority" name="filter_high"
                            domain="[('priority','=','high')]"/>

                    <separator/>

                    <!-- Group By -->
                    <group expand="0" string="Group By...">
                        <filter string="Source Type" name="gb_source_type"
                                domain="[]" context="{'group_by':'source_type'}"/>
                        <filter string="Type" name="gb_type"
                                domain="[]" context="{'group_by':'type'}"/>
                        <filter string="Category" name="gb_category"
                                domain="[]" context="{'group_by':'category_id'}"/>
                        <filter string="Partner" name="gb_partner"
                                domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="Currency" name="gb_currency"
                                domain="[]" context="{'group_by':'currency_id'}"/>
                        <filter string="State" name="gb_state"
                                domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Priority" name="gb_priority"
                                domain="[]" context="{'group_by':'priority'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ================================================================ -->
        <!-- REPORT LINE - Form View (for when clicking on line) -->
        <!-- ================================================================ -->

        <record id="eo_cfp_report_overview_line_form_view" model="ir.ui.view">
            <field name="name">eo.cfp.report.overview.line.form</field>
            <field name="model">eo.cfp.report.overview.line</field>
            <field name="arch" type="xml">
                <form string="Cashflow Item" version="7.0" create="false" edit="false" delete="false">
                    <group col="4">
                        <field name="source_type"/>
                        <field name="document_number"/>
                        <field name="planned_date"/>
                        <field name="actual_date"/>
                        <field name="type"/>
                        <field name="name"/>
                        <field name="category_id"/>
                        <field name="partner_id"/>
                        <field name="amount"/>
                        <field name="residual_amount"/>
                        <field name="signed_amount"/>
                        <field name="currency_id"/>
                        <field name="priority"/>
                        <field name="state"/>
                        <field name="planned_item_id"/>
                        <field name="invoice_id"/>
                    </group>
                    <group>
                        <button name="button_jump_to_document" type="object"
                                string="Open Document" class="oe_highlight"/>
                    </group>
                </form>
            </field>
        </record>

    </data>
</openerp>

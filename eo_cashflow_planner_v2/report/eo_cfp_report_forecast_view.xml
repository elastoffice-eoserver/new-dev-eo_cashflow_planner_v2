<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- ================================================================ -->
        <!-- CASHFLOW FORECAST REPORT - Form View -->
        <!-- ================================================================ -->

        <record id="eo_cfp_report_forecast_form_view" model="ir.ui.view">
            <field name="name">eo.cfp.report.forecast.form</field>
            <field name="model">eo.cfp.report.forecast</field>
            <field name="arch" type="xml">
                <form string="Cashflow Forecast" version="7.0" create="false">

                    <!-- Header / Filter Section -->
                    <group col="4">
                        <field name="date_from" on_change="onchange_forecast_months(date_from, forecast_months)"/>
                        <field name="date_to"/>
                        <field name="forecast_months" on_change="onchange_forecast_months(date_from, forecast_months)"/>
                        <newline/>
                        <field name="category_id"/>
                        <field name="group_by"/>
                        <field name="include_planned"/>
                        <field name="include_recurring"/>
                    </group>

                    <!-- Summary Section -->
                    <group string="Summary" col="6">
                        <field name="opening_balance"/>
                        <field name="total_income" readonly="1"/>
                        <field name="total_payment" readonly="1"/>
                        <field name="net_cashflow" readonly="1"/>
                        <field name="closing_balance" readonly="1"/>
                        <field name="currency_id" style="width: 100px;"/>
                        <label string="" colspan="6"/>
                        <button name="display_items" type="object" string="Load Items" class="oe_highlight"/>
                        <button string="Export to XLS"
                                type="action"
                                name="%(eo_cfp_report_forecast_xls)d"
                                icon="gtk-print" context="{'xls_export': True}"/>
                    </group>

                    <!-- Results Section -->
                    <group>
                        <notebook>
                            <page string="Forecast Items">
                                <field name="line_ids" nolabel="1">
                                    <tree string="Forecast Items" create="false"
                                          colors="blue:type=='income';red:type=='payment';gray:state=='cancelled'">
                                        <field name="planned_date"/>
                                        <field name="type"/>
                                        <field name="name"/>
                                        <field name="category_id"/>
                                        <field name="partner_id"/>
                                        <field name="amount" sum="Total Amount"/>
                                        <field name="signed_amount" sum="Net Cashflow"/>
                                        <field name="balance_after"/>
                                        <field name="currency_id" groups="base.group_multi_currency"/>
                                        <field name="state"/>
                                        <button name="button_jump_to_item" type="object"
                                                string="View Item" icon="gtk-jump-to"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </form>
            </field>
        </record>

        <!-- ================================================================ -->
        <!-- ACTION -->
        <!-- ================================================================ -->

        <record id="action_eo_cfp_report_forecast" model="ir.actions.act_window">
            <field name="name">Cashflow Forecast</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">eo.cfp.report.forecast</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
            <field name="view_id" ref="eo_cfp_report_forecast_form_view"/>
        </record>

        <!-- ================================================================ -->
        <!-- REPORT LINE - Form View -->
        <!-- ================================================================ -->

        <record id="eo_cfp_report_forecast_line_form_view" model="ir.ui.view">
            <field name="name">eo.cfp.report.forecast.line.form</field>
            <field name="model">eo.cfp.report.forecast.line</field>
            <field name="arch" type="xml">
                <form string="Forecast Item" version="7.0" create="false" edit="false" delete="false">
                    <group col="4">
                        <field name="planned_date"/>
                        <field name="type"/>
                        <field name="name"/>
                        <field name="category_id"/>
                        <field name="partner_id"/>
                        <field name="amount"/>
                        <field name="signed_amount"/>
                        <field name="balance_after"/>
                        <field name="currency_id"/>
                        <field name="state"/>
                    </group>
                    <group>
                        <button name="button_jump_to_item" type="object"
                                string="Go to Planned Item" class="oe_highlight"/>
                    </group>
                </form>
            </field>
        </record>

    </data>
</openerp>
